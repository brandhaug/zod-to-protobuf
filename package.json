{
  "name": "zod-to-protobuf",
  "version": "1.0.7",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "/dist"
  ],
  "exports": {
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
    "build": "rimraf ./dist && npm run build:cjs && npm run build:esm && npm run build:types",
    "test": "tsc --noEmit && biome check --write && vitest run",
    "format": "biome format --write",
    "lint": "biome check --write",
    "prepare": "husky"
  },
  "keywords": [
    "zod",
    "protobuf",
    "schema",
    "conversion",
    "typescript"
  ],
  "author": "Martin Brandhaug",
  "license": "MIT",
  "description": "A utility to convert Zod schemas to Protocol Buffers definitions.",
  "repository": {
    "type": "git",
    "url": "https://github.com/brandhaug/zod-to-protobuf.git"
  },
  "bugs": {
    "url": "https://github.com/brandhaug/zod-to-protobuf/issues"
  },
  "homepage": "https://github.com/brandhaug/zod-to-protobuf#readme",
  "dependencies": {
    "inflection": "^3.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/node": "^22.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "biome format",
      "biome check",
      "git add"
    ]
  }
}
