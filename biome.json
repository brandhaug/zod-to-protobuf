{
  "$schema": "./node_modules/@biomejs/biome/schema.json",
  "formatter": {
    "ignore": ["dist/"],
    "lineWidth": 120,
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "trailingCommas": "none",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true,
    "ignore": ["dist/"]
  },
  "linter": {
    "enabled": true,
    "ignore": ["dist/"],
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "useArrowFunction": "error"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
